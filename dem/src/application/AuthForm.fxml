<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.AuthFormController">
	<center>
		<VBox alignment="CENTER" spacing="10">
			<Label text="Логин" />
			<TextField fx:id="loginTextField" />
			<Label text="Пароль" />
			<PasswordField fx:id="passwordTextField" />
			<Button fx:id="loginButton" onMouseClicked="#loginButtonClick" text="Войти" />
		</VBox>
	</center>
</BorderPane>
